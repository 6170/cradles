<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  <legend class='page-header'>
    <h1><i class="icon-signin"></i> Sign in</h1>
    
  </legend>
  <div class="row">
    <div class="span6">
        <%= f.input :email, :autofocus => true %>
        <%= f.input :password %>
        <%= f.input :remember_me, :label => false, :inline_label => 'Remember me', :as => :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="span6">
      <div class="well">
        <p class="lead lead-large margin-bottom-small"><i class="icon-exclamation-sign"></i> Trouble signing in?</p>
        Try to <strong><%= link_to "reset your password", new_password_path(resource_name) %></strong>.
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Sign in", :class => 'btn-primary btn-large' %>
  </div>
  
<% end %>
