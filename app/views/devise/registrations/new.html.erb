<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  <legend>Sign up</legend>
  <%= f.error_notification %>
  <%= f.input :first_name, :required => true %>
  <%= f.input :last_name, :required => true %>
  <%= f.input :email, :required => true %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true %>
  
  <% if resource_name.to_s == 'teacher' %>
    <%= f.input :school, :input_html => { :class => 'typeahead', :'data-url'=>url_for(autocomplete_school_names_search_index_path) } %>
  <% end %>
  
  <div class="form-actions">
    <%= f.button :submit, "Sign in", :class => 'btn-primary btn-large' %>
    <div class="form-links pull-right">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
