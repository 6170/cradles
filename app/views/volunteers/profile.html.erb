<h3>Welcome, Please complete your profile.</h3>

<%= simple_form_for(current_volunteer, :url => '', :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :interests, :as => :text, :input_html => { :rows => '5' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Complete" %>
  </div>
<% end %>