<div class="row">
  <div class="offset chatArea">
    <% if @messages.each do |message| %>
      <% if message.from == @from %>
        <div class="bubbledRight"><small><%= message.from %></small><br><%= message.content %><br><small><%= message.created_at.strftime("%B %d, %Y") %></small></div>
      <% else %>
        <div class="bubbledLeft"><small><%= message.from %></small><br><%= message.content %><br><small><%= message.created_at.strftime("%B %d, %Y") %></small></div>
      <% end %>
    <% end.empty? %>
    <h1>No Messages</h1>
    <% end %>
  </div>
</div>
<div class="row">
  <%= simple_form_for(@message, :html => {:class => 'form-inline' }) do |f| %>
    <%= f.input :to, :value => @to, :as => :hidden %>
    <%= f.input :from, :value => @from, :as => :hidden %>
    <div class="control-group hidden">
      <div class="controls">
        <input class="hidden" id="message_conversation_id" name="message[conversation_id]" type="hidden" value="<%= @conversation.id %>">
      </div>
    </div>
    <div class="form-actions">
      <div class="control-group string required span8 offset4">
        <div class="controls">
          <input class="string required" placeholder="..." id="message_content" name="message[content]" size="50" type="text">
          <input class="btn btn" name="commit" type="submit" value="Send Message">
        </div>
      </div>
    </div>
  <% end %>
</div>