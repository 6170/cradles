<%= link_to "Bright Futures", root_path, :class => 'brand' %>
<ul class="nav pull-right">
  <% if teacher_signed_in? %>
    <li><%= link_to :controller => "conversations" do %><i class="icon-envelope"></i> Messages <% if Message.find_all_by_to_and_was_read(current_teacher.email, false).count > 0 %><span class="badge badge-important"><%= Message.find_all_by_to_and_was_read(current_teacher.email, false).count %></span><% end %><% end %></li>
    <li><%= link_to(search_index_path) do %><i class="icon-search"></i> Search Volunteers<% end %></li>
    <li><%= link_to(edit_teacher_registration_path) do %><i class="icon-cogs"></i> Edit Account<% end %></li>
    <li><%= link_to(destroy_teacher_session_path, :method=>'delete') do %><i class="icon-signout"></i> Logout<% end %></li>
  <% end %>
  <% if volunteer_signed_in? %>
    <li><%= link_to :controller => "conversations" do %><i class="icon-envelope"></i> Messages <% if Message.find_all_by_to_and_was_read(current_volunteer.email, false).count > 0 %><span class="badge badge-important"><%= Message.find_all_by_to_and_was_read(current_volunteer.email, false).count %></span><% end %><% end %></li>
    <li><%= link_to :controller => "volunteers", :action => "profile" do %><i class="icon-user"></i> Update Profile<% end %></li>
    <li><%= link_to(edit_volunteer_registration_path) do %><i class="icon-cogs"></i> Edit Account<% end %></li>
    <li><%= link_to(destroy_volunteer_session_path, :method=>'delete') do %><i class="icon-signout"></i> Logout<% end %></li>
  <% end %>
</ul>